@model ApteanClinic.Models.DashboardModel

@{
    ViewBag.Title = "Dashboard";
}

@Styles.Render("~/Content/css")
<div class="row text-center heading">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <p id="display-name" class="display-name">@Session["Username"]</p>
    </div>
</div>

<div class="container-fluid" id="dashboardPanel">
    <div class="row dashboard-elements-row" style="margin-top:100px;">
        <div class="col-lg-3 col-md-2 col-sm-0 col-xs-0"></div>
        <a href="/Patients/Index">
            <p id="role" style="display:none">@Session["Role"]</p>
            <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element1">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalPatients</p></div>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="fas fa-user-injured"></i></p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p class="user-text">Total Patients</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                            <label style="color:#8AC2B4">@Model.totalPatients</label>
                            <label style="color:#2A3F54"> Added from today</label>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        @if (Session["Role"].ToString() == "Admin")
        {
            <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element2">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalAppointments</p></div>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="far fa-calendar-check"></i></p></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <p class="user-text" style="font-size:40px;">Total Appointments</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                            <label style="color:#8AC2B4">@Model.totalAppointmentsToday</label>
                            <label style="color:#2A3F54"> for today</label>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (Session["Role"].ToString() == "Nurse")
        { <a href="/Appointment/AppointmentList">
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element2">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalAppointments</p></div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="far fa-calendar-check"></i></p></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p class="user-text" style="font-size:40px;">Total Appointments</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                                <label style="color:#8AC2B4">@Model.totalAppointmentsToday</label>
                                <label style="color:#2A3F54"> for today</label>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
        else if(Session["Role"].ToString() == "Doctor")
        {
            <a href="/Doctors/Details/@Session["DoctorId"]">
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element2">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalAppointments</p></div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="far fa-calendar-check"></i></p></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p class="user-text" style="font-size:40px;">Total Appointments</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                                <label style="color:#8AC2B4">@Model.totalAppointmentsToday</label>
                                <label style="color:#2A3F54"> for today</label>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
        <div class="col-lg-3 col-md-2 col-sm-0 col-xs-0"></div>
    </div>

    <div class="row dashboard-elements-row">
        <div class="col-lg-3 col-md-2 col-sm-0 col-xs-0"></div>
        @if (Session["Role"].ToString() == "Doctor")
        {
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element3">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalDoctors</p></div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="fas fa-user-md"></i></p></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p class="user-text">Total Doctors</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                                <label style="color:#8AC2B4">@Model.totalDoctors</label>
                                <label style="color:#2A3F54"> Doctors Available</label>
                            </div>
                        </div>
                    </div>
                </div>
        }
        else
        {
            <a href="/Doctors/Index">
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element3">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalDoctors</p></div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="fas fa-user-md"></i></p></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <p class="user-text">Total Doctors</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                                <label style="color:#8AC2B4">@Model.totalDoctors</label>
                                <label style="color:#2A3F54"> Doctors Available</label>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
        <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12 dashboard-elements" id="element4">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2"><p class="user-count">@Model.totalUsers</p></div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 text-right"><p class="user-icon"><i class="fas fa-users"></i></p></div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <p class="user-text">Total Users</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="font-size:20px;">
                        <label style="color:#8AC2B4">@Model.totalUsers</label>
                        <label style="color:#2A3F54"> Active Accounts</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-2 col-sm-0 col-xs-0"></div>
    </div>
</div>

<div class="container-fluid" id="patientView" style="display:none;margin-top:50px;">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" class="active" data-slide-to="0"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="item active">
                        <img src="~/Images/Image2.jpg" alt="Image1" class="carousel-img">
                    </div>

                    <div class="item">
                        <img src="~/Images/Image3.jpg" alt="Image2" class="carousel-img">
                    </div>

                    <div class="item">
                        <img src="~/Images/Image1.jpg" alt="Image3" class="carousel-img">
                    </div>
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </div>

    <div class="row text-center" style="margin-top:100px">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="para">
                Aptean Clinic is developed to support and automate the clinic daily operation.
                Aptean Clinic is a system that can help the clinic to manage their daily activity.
                This system will involve all the clinic operation starting from patient registration.
                Here the patients can register online and get their appointment.
                This system enables doctors and clinic assistant to manage patient records and appointment and produce reports.
                This system help reduce the problems occur when using the manual system.
                The system is developed due to the problems that exist when using the manual system like Data inconsistency, data mix with other data and problem regarding reportings that the user is facing.
                This system is easy and simple to use and it can help the clinic to manage their activity and at the same time overcome the problem.
                By using these kinds of system all the patient information will be save into database in systematic and efficiently.
                This also can reduce the lost data problem because all the information will be kept in the database.
                Also those data will be available for user to see his history from anywhere.
            </p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/DashboardScript.js"></script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}