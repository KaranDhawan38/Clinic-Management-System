@model ApteanClinic.Models.Nurse

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Nurse Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NurseUser.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.NurseUser.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.NurseUser.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NurseUser.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NurseUser.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EnumDropDownListFor(model => model.NurseUser.Gender, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NurseUser.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NurseUser.BloodGroup, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EnumDropDownListFor(model => model.NurseUser.BloodGroup, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NurseUser.BloodGroup, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NurseUser.Contact, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.NurseUser.Contact, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NurseUser.Contact, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.NurseUser.Email)
    @Html.HiddenFor(model => model.NurseUser.Role)
    @Html.HiddenFor(model => model.NurseUser.Password)
    @Html.HiddenFor(model => model.NurseUser.ConfirmPassword)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

@if (Session["Role"].ToString() != "Nurse")
{
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
