
@{
    Layout = "~/Views/Shared/LoginPageLayout.cshtml";
    ViewBag.title = "Forgot Password";
}


    <div class="container-fluid" id="OTP-form">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <form action="/ForgotPassword/NewPassword" method="post">
                            <h2 class="text-center" style="padding-top:20px;" >Forgot Password?</h2>
                            <p class="text-center">You can reset your password here.</p>
                            <div class="text-danger">
                                @Html.ValidationSummary()
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="password" name="newpassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" name="confirmpassword" class="form-control" />
                                </div>
                                <button class="btn btn-success btn-block">Change Password</button>
                                <button onclick="window.location.href='/Login/Index'" type="button" class="btn btn-danger btn-block">Back</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
