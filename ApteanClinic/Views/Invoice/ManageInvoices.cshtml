@model IEnumerable<ApteanClinic.Models.InvoiceViewModel>
<h1 id="InvoiceHeader">Manage Invoices</h1>
<hr />
<div class="tables row">
    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>ManageInvoices</title>
    </head>
    <body>

        <table id="myTable" class="table table-striped table-bordered table-sm">

            <thead>

                <tr>
                    <th id="th">
                        @Html.DisplayNameFor(model => model.InvoiceId)
                        <i class="fa fa-fw fa-sort"></i>
                    </th>
                    <th id="th">
                        @Html.DisplayNameFor(model => model.PatientName)
                        <i class="fa fa-fw fa-sort"></i>
                    </th>

                    <th id="th">
                        @Html.DisplayNameFor(model => model.Total)
                        <i class="fa fa-fw fa-sort"></i>
                    </th>
                    <th id="th">
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                        <i class="fa fa-fw fa-sort"></i>
                    </th>
                    <th id="th">
                        Actions
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceId)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentDate)
                        </td>

                        <td>

                            @Html.ActionLink("View", "GetAppointmentDetailsByInvoiceId", "Invoice", new { InvoiceId = item.InvoiceId }, null)
                            <span style="padding:5px;" class="glyphicon glyphicon-eye-open"></span>
                            @if (Session["Role"].ToString() == "Admin")
                            {
                            @Html.ActionLink("Delete", "Delete", "Invoice", new { InvoiceId = item.InvoiceId }, null)
                            <span style="padding:5px;" class="glyphicon glyphicon-remove"></span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </body>
</html>
    </div>