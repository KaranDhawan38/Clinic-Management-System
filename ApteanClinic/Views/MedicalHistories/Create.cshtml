@model ApteanClinic.Models.MedicalHistory

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Add Medical Observations</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Dignosis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Dignosis, new { htmlAttributes = new { @class = "form-control", @rows = 2 } })
                @Html.ValidationMessageFor(model => model.Dignosis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Medicine, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Medicine, new { htmlAttributes = new { @class = "form-control", @rows = 2 } })
                @Html.ValidationMessageFor(model => model.Medicine, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClinicRemark, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.ClinicRemark, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                @Html.ValidationMessageFor(model => model.ClinicRemark, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding-left:450px">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}
