@model ApteanClinic.Models.Patient
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/HomePageLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Details.css" />

<h3>Patient's Details</h3>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="detailsShow">
                <div class="x_content">
                    <div class="col-md-3 col-sm-3 col-xs-12 profile_left ">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                <img class="img-responsive avatar-view" src="~/Images/user.png">
                            </div>
                        </div>

                        <h3> @Html.DisplayFor(model => model.PatientUser.Name)</h3>
                        <ul class="list-unstyled user_data">
                            <li class="details-list"> <i class="glyphicon glyphicon-user"><strong>@Html.DisplayNameFor(model => model.Id) : </strong> @Html.DisplayFor(model => model.Id)</i></li>
                            <li class="details-list"> <i class="glyphicon glyphicon-user"><strong>@Html.DisplayNameFor(model => model.PatientUser.Gender) : </strong> @Html.DisplayFor(model => model.PatientUser.Gender)</i></li>
                            <li class="details-list"> <i class="glyphicon glyphicon-user"><strong>@Html.DisplayNameFor(model => model.Height) : </strong> @Html.DisplayFor(model => model.Height)</i></li>
                            <li class="details-list"> <i class="glyphicon glyphicon-user"><strong>@Html.DisplayNameFor(model => model.Weight) : </strong> @Html.DisplayFor(model => model.Weight)</i></li>
                            <li class="details-list"> <i class="glyphicon glyphicon-map-marker user-profile-icon"></i><strong>Address :</strong> @Html.DisplayFor(model => model.Address)</li>
                            <li class="details-list"> <i class="glyphicon glyphicon-earphone"></i><strong>@Html.DisplayNameFor(model => model.PatientUser.Contact) :</strong> @Html.DisplayFor(model => model.PatientUser.Contact)</li>
                            <li class="details-list"> <strong>@Html.DisplayNameFor(model => model.EmergengyContactName) :</strong> @Html.DisplayFor(model => model.EmergengyContactName) </li>
                            <li class="details-list"> <i class="glyphicon glyphicon-phone-alt"></i><strong>>@Html.DisplayNameFor(model => model.EmergencyContactNumber) :</strong> @Html.DisplayFor(model => model.EmergencyContactNumber) </li>
                        </ul>
                        @if (Session["Role"].ToString() != "Doctor")
                        {
                            <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Edit", "Patients", new { id = Model.Id })'"><span style="padding:5px;" class="glyphicon glyphicon-edit"></span>Edit</button>
                            if (Session["Role"].ToString() == "Patient")
                            {
                                <button class="btn btn-default" type="button" onclick="location.href='/ResetPassword/Index'"><i style="padding:5px" class="fa fa-lock"></i> Reset Password </button>
                            }
                        }
                        <br />
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="section" style="font-size:x-large"> Appointment</span>
                            <br /> <br />
                            <h4>
                                <a href="@Url.Action("AppointmentList", "Appointment", new {id = Model.Id})">Patient Appointment </a>
                            </h4>

                            </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <span class="section" style="font-size:x-large">Patient's Medical History </span>
                            <br />
                            <br />
                            <h4>
                                <a href="@Url.Action("Details", "MEdicalHistories", new {id = Model.Id})">Medical History</a>&nbsp;
                                @if ((int)Session["Role"] == 1)
                                {
                                    <a href="@Url.Action("Create", "MedicalHistories", new { id = Model.Id })"><i class="fa fa-plus"></i></a>
                                }

                            </h4>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



